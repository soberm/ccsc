{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "reason-string": "off",
    "compiler-version": "off",
    "avoid-tx-origin": "off",
    "no-inline-assembly": "off",
    "no-unused-vars": "off",
    "no-empty-blocks": "off",
    "avoid-low-level-calls": "off",
    "func-visibility": ["warn",{"ignoreConstructors":true}]
  },
  "plugins": ["prettier"]
}
